doctype html
head
  title New book

body
  h1 New Book

  form#new-book(
    action="/book/"
    method="POST"
    enctype="multipart/form-data"
  )
    label(for="title") Title: 
    input#title(
      name="title"
      type="text"
      required
    )
    br

    label(for="description") Description: 
    textarea#description(
      name="description"
      required
    )
    br

    label(for="author") Author: 
    input#author(
      name="author"
      required
      type="text"
    )
    br

    label(for="published") Published: 
    input#published(
      name="published"
      required
      type="number"
    )
    br

    label(for="cover") Cover: 
    input#cover(
      name="cover"
      required
      type="file"
      accept=".png,.jpg,.jpeg,.gif"
    )
    button Add book

  script(src="/js/new-book.js")


